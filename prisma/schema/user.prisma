model User {
  username  String    @id @unique
  firstName String
  lastName  String
  email     String    @unique
  token     String?   @unique
  role      UserRole  @default(USER)
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  image     String?
  posts     Post[]
}

enum UserRole {
  USER
  EDITOR
  ADMIN
}
